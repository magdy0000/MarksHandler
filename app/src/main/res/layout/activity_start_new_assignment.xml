<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/DarkBlue"
    tools:context=".Activitys.StartNewAssignment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Assignment"
        android:textSize="24sp"
        android:textColor="@color/whit"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/edittext_new_assignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Enter the assignment details"
        android:maxLines="5"
        android:textColorHint="@color/whit"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/upload_pic_new_assi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_ground_regist_button"
        android:layout_margin="20dp"
        android:text="Upload a photo"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@color/whit"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        />

    <Button
        android:id="@+id/upload_the_assi_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_ground_regist_button_red"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:text="Upload the assignment"
        android:textStyle="bold"
        />



    </LinearLayout>
</ScrollView>