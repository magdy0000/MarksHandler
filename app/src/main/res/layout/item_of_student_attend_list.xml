<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/static_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name : "
        android:textSize="17sp"

        />
    <TextView

        android:id="@+id/text_Student_name"
        android:layout_toRightOf="@+id/static_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="10dp"
        android:textSize="17sp"

        />

    <TextView
        android:id="@+id/static_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID : "
        android:layout_below="@+id/static_username"
        android:textSize="17sp"

        />


    <TextView

        android:id="@+id/text_Student_id"
     android:layout_toRightOf="@+id/static_id"

        android:layout_below="@+id/static_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="10dp"
        android:textSize="17sp"


        />



</RelativeLayout>