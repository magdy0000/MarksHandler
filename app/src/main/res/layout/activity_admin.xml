<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.markshandler.Activitys.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/attBtnFrag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:textColor="@color/whit"
            android:textSize="14sp"
            android:background="@color/DarkBlue"

            />

        <Button
            android:id="@+id/lecBtnFrag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lectures"
            android:textSize="14sp"
            android:textColor="@color/whit"
            android:background="@color/DarkBlue"

            />

        <Button
            android:id="@+id/assBtnFrag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Assignment"
            android:textColor="@color/whit"
            android:textSize="14sp"
            android:background="@color/DarkBlue"

            />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/doctorFra"
        >

    </FrameLayout>

</LinearLayout>