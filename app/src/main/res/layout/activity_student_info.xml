<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.StudentInfo">

    <TextView
        android:id="@+id/student_name_ofStudentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="knnnknk"
        android:textSize="19sp"
        android:layout_centerHorizontal="true"


        />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/static_student_id"
        android:layout_below="@+id/student_name_ofStudentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Student Id : "

        />
    <TextView
      android:layout_toRightOf="@+id/static_student_id"
        android:layout_below="@+id/student_name_ofStudentInfo"
        android:layout_marginTop="5dp"
        android:id="@+id/user_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="56766668"
        android:textSize="15sp"
        />

    <TextView
        android:layout_below="@+id/static_student_id"
        android:id="@+id/static_number_of_attendance"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Number of attendance : "
        />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/number_attendance"
        android:layout_toRightOf="@+id/static_number_of_attendance"
        android:layout_below="@+id/static_student_id"
        android:layout_width="wrap_content"
        android:text="33"
        android:layout_height="wrap_content"
        android:textSize="15sp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_attendance"
        android:text="x"
        android:layout_marginTop="30dp"
        android:id="@+id/delete_btn"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>